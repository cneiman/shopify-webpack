}

.btn{
	background: #4caf50;
	color: #fff;
	border: none;
}

.password-wrapper .btn{
	background: #000;
	color: #fff;
	border: 1px solid #fff;
	text-transform: uppercase;
	font-weight: bold;
	letter-spacing: 2px;
}

.password-mailing-list label{
	margin-bottom: 10px;
	display: inline-block;
}

.password-entry{
	color: #000;
	text-decoration: underline;
	cursor: pointer;
}

input#email{
  background: white !important;
  color: black! important;
}

.input-group .input-group-btn{
display: inline-block;
margin-top: 20px;
width: 100%;
}

#login_form input{
	text-align: center;
}

.input-group .input-group-btn .btn{
	padding: 10px 20px;
}

.input-group input{
	width: 200px;
    padding: 20px;
}

.password-wrapper{
	text-align: center;
	padding: 0;
}

.password-wrapper label{
	margin-bottom: 10px;
	display: inline-block;
}

.store-owner{
	display: inline-block;
	padding: 20px 0 0;
	line-height: 150%;
}

header#site-header {
    background-color: #ebebeb;
    color: #000;
    font-size: 12px;
    line-height: 12px;
    padding: 10px 0;
    position: relative;
    z-index: 10000;
}

.modal-open{
	text-align: center;
	display: inline-block;
	width: 100%;
}

.modal-open a{
	padding: 20px 0;
	text-decoration: none;
	display: inline-block;
}

@media only screen and (max-width: 768px) {
	#powered{
		position: relative;
	}

	.input-group input{
		max-width: auto;
	}

  .welcome-message{
    font-size: 20px;
    width: 80%;
  }

}

.lds-dual-ring{
  display: inline-block;
  margin: -15px -30px;
}

.lds-dual-ring:after{
  content: " ";
  display: block;
  width: 20px;
  height: 20px;
  margin: 10px;
  border-radius: 50%;
  border: 2px solid black;
  border-color: white transparent white transparent;
  animation: lds-dual-ring 1.2s linear infinite;
}

@keyframes lds-dual-ring {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

