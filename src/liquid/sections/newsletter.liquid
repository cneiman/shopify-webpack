{% case section.settings.colors %}
  {% when 'white' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--white">
  {% when 'light' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--light">
  {% when 'accent' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--accent">
  {% when 'dark' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--dark">
{% endcase %}

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 newsletter--section--grid vertical--align">

        <div class="newsletter--section--grid_inner newsletter_title">
            {% if section.settings.newsletter_heading %}
            <h3>{{ section.settings.newsletter_heading }}</h3>
            {% endif %}
            {% if section.settings.newsletter_description %}
              <div class="rte">{{ section.settings.newsletter_description }}</div>
            {% endif %}
        </div>

      </div>
      <div class="col-xs-12 col-sm-5 col-sm-offset-1 newsletter--section--grid vertical--align">

        <div class="newsletter--section--grid_inner newsletter_form">
          {% include 'newsletter-form' %}
        </div>
      </div>

    </div>
  </div>

</div>

