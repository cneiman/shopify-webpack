        {
            "type": "color",
            "id": "notification-bar--text-colour",
            "label": {
                "en": "Announcement text",
                "de": "Ank\u00fcndigungstext",
                "es": "Texto del anuncio",
                "fr": "Texte de l'annonce",
                "pt-PT": "Texto do an\u00fancio"
