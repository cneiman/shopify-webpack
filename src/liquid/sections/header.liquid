			{% include 'responsive-image' with section.settings.logo, alt: image.alt, blur: false, props: 'itemprop="logo"' %}
		</a>
	{% else %}
		<a class="site-header__logo-link custom-font" href="/" itemprop="url">{{ shop.name }}</a>
	{% endif %}
{% endcapture %}

