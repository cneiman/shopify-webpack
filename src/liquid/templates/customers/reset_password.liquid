<div class="content clearfix">

<div class="title-bar {{ settings.title-bar-styling }} custom-font">
	<h2>{{ 'customer.reset_password.title' | t }}</h2>
	<div class="clear"></div>
</div>

<div class="row reset-password">

<div class="col-lg-4 col-lg-offset-4">

    <p class="note">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

    {% form 'reset_customer_password' %}
      {{ form.errors | default_errors }}

      <div id="password" class="clearfix form-row">
        <label class="large" for="password">{{ 'customer.reset_password.password' | t }}</label>
        <input type="password" class="form-control"   name="customer[password]" id="customer_password" class="large password" size="16" />
      </div>
      <div id="password_confirm" class="clearfix form-row">
        <label class="large" for="password_confirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
        <input type="password" class="form-control"   name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
      </div>
      <div class="action_bottom">
        <input class="btn btn-success" type="submit" value="{{ 'customer.reset_password.submit' | t }}" />
      </div>
    {% endform %}
    
    </div>
    
    </div>
</div>
